@import "../../../resetcss/reset.wxss";
.page-post {
    background-color: #EFEFF4;
    height:100%;
}
.face,.post-comment-content .face{
    display:inline-block;
    width:40rpx;
    height:40rpx;
    margin:0 3rpx;
}
.liststyle-foot-title {
    text-align: center;
    font-size: 12px;
    line-height: 80rpx;
    color: #ccc;
}
.post-comment-quote{
    color:#333;
    background:#ddd;
    margin-top:20rpx;
    margin-bottom:25rpx;
    padding:5rpx 15rpx;
    border-radius:5px;
    position:relative;
    line-height:50rpx;
}
.triangle-bottom {width:0;height:0;border-left:20rpx solid transparent;border-top:20rpx solid #ddd;border-right:20rpx solid transparent;position:absolute;bottom:-18rpx}
.hits{
    padding-left: 35rpx;
    line-height:35rpx;
    height:35rpx;
    margin-top:10rpx;
    background: url(data:image/png;base64,) no-repeat 0 center;
    background-size: 28rpx auto;
}
.post-manage{
    width:35rpx;
    height:35rpx;
    background:url(data:image/png;base64,) no-repeat center center;
    background-size:cover;
}
.focus{
    width:150rpx;
    height:45rpx;
    line-height:45rpx;
    color:#343434;
    border:2rpx solid currentColor;
    text-align:center;
    margin-top:45rpx;
    margin-right:30rpx;
}
.zanList-wrapper{
    margin-top:20rpx;
    display:flex;
    align-item:flex-start;
    background:#f2f2f2;
    padding:10rpx 15rpx 8rpx;
}
.reply-recommendAdd{
    padding-left:35rpx;
    background:url(data:image/png;base64,) no-repeat 0 0;
    background-size:32rpx;
    margin-right:10rpx;
    color:#555;
}
.replies{
    width:28rpx;
    height:30rpx;
    float:right;
    position:relative;
    margin-top:20rpx;
    background: url(data:image/png;base64,) no-repeat 0 1px;
    background-size: 28rpx auto;
    margin-left: 20rpx;
}
.action-wrapper{
    position:absolute;
    right:32rpx;
    top:-8rpx;
    background:#000;
    opacity:0.4;
    border-radius:3px;
    padding:8rpx;
    display:flex;
}
.action-sheet{
    width:80rpx;
    text-align:center;
    color:#fff;  
}
.action-border{
    border-right:1px solid #fff;
}
.post-meta-wrapper{
    display:flex;
    justify-content:space-between;
    background:#fff;
}
.post-title {
    line-height: 80rpx;
    font-size: 46rpx;
    padding: 24rpx 20rpx 10rpx;
    border-bottom: 1rpx solid #DDD;
    background: #FFF;
}
.post-meta {
    height: 88rpx;
    padding: 20rpx;
    background: #FFF;
}
.post-user-avatar {
    display: block;
    height: 72rpx;
    width: 72rpx;
    margin: 8rpx 0;
    border-radius: 50%;
    float: left;
}
.post-meta-content {
    height: 100%;
    margin-left: 90rpx;
}
.post-info {
    height: 48rpx;
}
.post-user-name {
    float: left;
    height: 48rpx;
    line-height: 48rpx;
    font-size: 30rpx;
    color: #6C6C6C;
}
.post-info-wapper{
    display:flex;
    justify-content: space-between;
}
.post-level-tag {
    float: left;
    height: 40rpx;
    line-height: 40rpx;
    margin: 2rpx;
    margin-left: 10rpx;
    border-radius: 6rpx;
    font-size: 24rpx;
    border: 1rpx solid #000;
    transform: scale(.6);
    transform-origin: 0 50%;
    overflow: hidden;
}
.post-level-num {
    display: inline-block;
    padding: 0 10rpx;
    background: #CCC;
    color:#fff;
}
.post-level-text {
    padding: 0 10rpx;
}
.post-warpper{
    flex:1;
    margin-left:20rpx;
}
.post-info-ext {
    height: 40rpx;
}
.post-info-ext text {
    font-size: 24rpx;
    color: #A4A4A4;
}
.post-info-ext text {
    margin-right: 5rpx;
}

.post-content {
    padding: 20rpx 28rpx 20rpx;
    background: #FFF;
    overflow:hidden;
}

.post-content-large{
    padding-bottom:80rpx;
}

.post-content text {
    font-size: 34rpx;
    word-wrap: break-word;
    margin-bottom:20rpx
}

.post-content image{
    margin-top:20rpx;
}

.hits-number {
    font-size: 28rpx;
    color: #6E6E6E;
}
.align-left {
    text-align: left;
}
.align-center {
    text-align: center;
}
.align-right {
    text-align: right;
}
.post-comments {
    margin-bottom: 20rpx;
    background: #FFF;
}
.post-footer-wrapper{
    width:100%;
    padding:12.5rpx 30rpx;
    height:80rpx;
    box-sizing: border-box;
    background:#f2f2f2;
    position:fixed;
    left:0;
    bottom:0;
    z-index:20;
    border-top: 2rpx solid #DDD;
}
.post-footer{
    display:flex;
    justify-content: space-between;
}
.post-mark{
    width:500rpx;
    height:55rpx;
    display:flex;
    justify-content: space-between;
    padding:0 20rpx;
    border:2rpx solid #ddd;
    line-height:60rpx;
    border-radius: 5px;
    box-sizing: border-box;
}
.post-footer input{
    border:2rpx solid #ddd;
    border-radius: 5px;
    width:500rpx;
    height:55rpx;
    line-height:60rpx;
    box-sizing: border-box;
}
.post-footer button{
    float:right;
    height:55rpx;
    border:none;
    line-height:58rpx;
    top:-55rpx;
}
.post-form{
    display:block
}
.post-mask{
    width:100%;
    height:100%;
    position:fixed;
    top:0;
    left:0;
}
.post-mark-meta{
    display:flex;
}
.post-mark-meta-item{
    width:58rpx;
    height:55rpx;
    border:2rpx solid #ccc;
    border-radius: 50%;
    background:#fff;
    margin-right:20rpx;
    box-sizing: border-box;
}
.post-mark-meta-like{
    background-size:58rpx auto;
}
.liked{
    background-size:58rpx auto;
}
.post-mark-meta-collet{
    margin-right:0;
    background-size:58rpx auto;
}
.post-mark-meta .colleted{
    background-size:58rpx auto;
}
.post-comment-item {
    padding: 20rpx 28rpx;
    border-bottom: 2rpx solid #DDD;
    display:flex;
}
.post-comment-content {
    margin-top: 10rpx;
}
.post-comment-content text {
    font-size: 30rpx;
    word-wrap: break-word;
}
.post-comment-content image{
    height:350rpx;
    margin:20rpx 0;
}
.topic-comment-info{
    display:flex;
    justify-content:space-between;
    margin-top:15rpx;
}
.post-card-title {
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 28rpx;
    border-bottom: 1rpx solid #DDD;
    font-size: 32rpx;
    color: #666;
}
.post-comment-info {
    overflow:hidden;
    margin-top: 10rpx;
}
.post-comment-info .hits{
    float:left;
}
.post-comment-info .replies{
    margin-top:15rpx;
}
.post-comment-info text {
    color: #A09F9F;
    font-size: 24rpx;
    margin-right: 10rpx;
}