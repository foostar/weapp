/*
    引入 tabs 的css样式    
*/
@import "/components/buttons-tab/buttons-tab.wxss";

page {
    background: #efeff4;
}
.blur {
    -webkit-filter: blur(10px); /* Chrome, Opera */
       -moz-filter: blur(10px);
        -ms-filter: blur(10px);    
            filter: blur(10px);    
}
.user-info {
    width: 100%;
    height: 480rpx;
    background-size: 200%;
    background-position: center center;
    color: #fff;
    font-size: 28rpx;
    position: relative;
    overflow: hidden;
}
.user-bg {
    width: 100%;
    height: 100%;
    background-size: 200%;
    background-position: center center;
}
.user-bg-cover {
    height: 100%;
    background: rgba(0,0,0,.2);
    text-align: center;
    position: absolute;
    top: 0;
    width: 100%;
}
.user-icon-box {
    padding-top: 90rpx;
    padding-bottom: 20rpx;
}
.user-icon {
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
}
.user-name {
    font-size: 32rpx;
    padding-bottom: 20rpx;
}
.user-tag, .user-verify-tag {
    text-align: center;
    display: inline-block;
    padding: 8rpx 10rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    color: #fff;
    margin-bottom: 30rpx;
}
.user-tag {
    background: #41a5fa;
}
.user-verify-tag {
    margin-left: 20rpx;
    background: #FA460A;
}
.user-bar {
    font-size: 26rpx;
    line-height: 30rpx;
    padding-bottom: 28rpx;
}
.user-bar-item {
    display: inline-block;
    width: 33%;
    color: #fff;
    text-align: center;
    vertical-align: middle;
}
.user-bar-stall {
    display: inline-block;
    height: 30rpx;
    background: #fff;
    width: 2rpx;
    -webkit-transform: scaleX(.5);
    -webkit-transform-origin: 0 0;
    overflow: hidden;
    vertical-align: middle;
}
.user-desc {
    font-size: 24rpx;
}

.user-publish-item {
    margin-bottom: 14rpx;
    background-color: #FFFFFF;
    padding: 20rpx;
    font-size: 28rpx;
}
.user-publish-info {
    position: relative;
    padding-bottom: 20rpx;
}
.user-publish-info-title {
    display: inline-block;
}
.user-publish-info-name {
    color: #000000;
    font-size: 36rpx;
    margin-bottom: 20rpx;
    margin-top: 10rpx;
}
.user-publish-info-date {
    color: #D5D5D5;
    font-size: 24rpx;
}
.user-publish-info-icon {
    display: inline-block;
    overflow: hidden;
    width: 96rpx;
    height: 96rpx;
    vertical-align: top;
    margin-right: 20rpx;
    border-radius: 10rpx;
}
.user-publish-info-from {
    position: absolute;
    top: 0;
    right: 0;
    font-size: 24rpx;
    color: #D5D5D5;
}
.user-publish-topic-title {
    font-size: 32rpx;
    color: #000;
    padding-bottom: 20rpx;
}
.user-publish-topic-desc {
    padding-bottom: 20rpx;
    color: #999;
}
.user-publish-bar {
    text-align: right;
    color: #BEBEBE;
}
.user-publish-topic-image {
    width: 200rpx;
    height: 160rpx;
    background-size: cover;
    background-position: 50%;
    margin-bottom: 20rpx;
}
.user-publish-bar-icon {
    width: 24rpx;
    height: 22rpx;
    background-position: 50%;
    background-repeat: no-repeat;
    background-size: 100%;
    margin-left: 10rpx;
    display: inline-block;
}
.user-publish-bar-text {
    margin-left: 10rpx;
}

.user-info-list {
    margin-bottom: 20rpx;
}
.user-info-item {
    font-size: 28rpx;
    height: 74rpx;
    line-height: 74rpx;
}
.user-info-title {
    background: #fff;
    display: inline-block;
    width: 28%;
    text-align: right;
    padding-right: 2%;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    height: 34rpx;
    line-height: 34rpx;
    vertical-align: top;
}
.user-info-data {
    background: #fff;
    display: inline-block;
    height: 34rpx;
    line-height: 34rpx;
    width: 70%;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    color: #888;
    position: relative;
}
.user-info-data:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: #ccc;
    height: 2rpx;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    overflow: hidden;
    z-index: 1;
}