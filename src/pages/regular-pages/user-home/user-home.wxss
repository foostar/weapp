/*
    引入 tabs 的css样式    
*/
@import "/components/buttons-tab/buttons-tab.wxss";

page {
    background: #efeff4;
}
.blur {
    -webkit-filter: blur(10px); /* Chrome, Opera */
       -moz-filter: blur(10px);
        -ms-filter: blur(10px);    
            filter: blur(10px);    
}
.user-info {
    width: 100%;
    height: 480rpx;
    background-size: 200%;
    background-position: center center;
    color: #fff;
    font-size: 28rpx;
    position: relative;
    overflow: hidden;
}
.user-bg {
    width: 100%;
    height: 100%;
    background-size: 200%;
    background-position: center center;
}
.user-bg-cover {
    height: 100%;
    background: rgba(0,0,0,.2);
    text-align: center;
    position: absolute;
    top: 0;
    width: 100%;
}
.user-icon-box {
    padding-top: 110rpx;
    padding-bottom: 20rpx;
}
.user-icon {
    width: 120rpx;
    height: 120rpx;
    border-radius: 120rpx;
}
.user-name {
    font-size: 32rpx;
    padding-bottom: 20rpx;
}
.user-tag {
    text-align: center;
    display: inline-block;
    padding: 8rpx 10rpx;
    border-radius: 4rpx;
    font-size: 24rpx;
    background: #41a5fa;
    color: #fff;
    margin-bottom: 30rpx;
}
.user-bar {
    font-size: 26rpx;
    line-height: 30rpx;
    padding-bottom: 20rpx;
}
.user-bar-item {
    display: inline-block;
    width: 33%;
    color: #fff;
    text-align: center;
    vertical-align: middle;
}
.user-bar-stall {
    display: inline-block;
    height: 30rpx;
    background: #fff;
    width: 2rpx;
    -webkit-transform: scaleX(.5);
    -webkit-transform-origin: 0 0;
    overflow: hidden;
    vertical-align: middle;
}


.user-desc {
    font-size: 24rpx;
}
