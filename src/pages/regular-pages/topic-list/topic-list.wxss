.topic-main {
    background: #efeff4;
    padding-top: 16rpx;
    min-height: 100%;
}
.topic-list-simple-box {
    margin-bottom: 16rpx;
}
.topic-list-item {
    background-color: #fff;
    padding: 20rpx;
    position: relative;
}
.topic-list-item:after {
    content: '';
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    background: #ccc;
    height: 1px;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
    overflow: hidden;
    z-index: 1;
}
.topic-title {
    margin-left: 20rpx;
    padding-left: 20rpx;
    border-style: solid;
    border-width: 0;
    border-left-width: 5px;
    border-left-color: currentColor;
    line-height: 42rpx;
    height: 42rpx;
    font-size: 28rpx;
}
.topic-list-item-icon {
    vertical-align: middle;
    display: inline-block;
    width: 72rpx;
    height: 72rpx;
    border-radius: 6rpx;
    margin-right: 20rpx;
    background-size: 100%;
    background-position: 50%;
    background-repeat: no-repeat;
    background-color: currentColor;
}
.topic-list-item-text {
    display: inline-block;
    vertical-align: middle;
    line-height: 72rpx;
    color: #9e9e9e;
    font-size: 28rpx;
}
.topic-list-item-image {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    width: 96rpx;
    height: 96rpx;
    border-radius: 10rpx;
    background-size: cover;
    background-position: 50%;
    background-repeat: no-repeat;
    margin-right: 20rpx;
    vertical-align: middle;
}
.topic-list-item-info {
    display: inline-block;
    margin-right: 120rpx;
    padding-left: 120rpx;
    vertical-align: middle;
}
.topic-list-item-info-username {
    word-wrap: break-word;
    font-size: 30rpx;
    line-height: 60rpx;
    color: #4d4d4d;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.topic-list-item-info-bar {
    line-height: 38rpx;
    word-wrap: break-word;
    font-size: 24rpx;
    color: #4e4e4e;
}
.topic-list-item-caretpc-btn {
    position: absolute;
    display: block;
    top: 41rpx;
    right: 20rpx;
    border-radius: 8rpx;
    width: 96rpx;
    font-size: 24rpx;
    color: #fff;
    background-color: currentColor;
    height: 54rpx;
    text-align: center;
    line-height: 54rpx;
}
.text-white {
    color: #fff;
}

