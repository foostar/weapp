page {
    background-color: #efefef;
    overflow: hidden;
}
.publish-select-warp {
    margin: 20rpx 0;
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
    padding: 0 20rpx;
}
.publish-select-label {
    font-size: 28rpx;
    color: #fa460a;
    font-weight: 900;
}
.publish-select {
    flex: 1;
    text-align: right;
    padding-right: 50rpx;
    background-size: 24rpx 24rpx;
    background-repeat: no-repeat;
    background-position: 98% 50%;
    font-size: 28rpx;
    color: #888;
}

.publish-content {
    background-color: #fff;
    padding-bottom: 20rpx;
    margin-bottom: 60rpx;
}
.publish-title {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
    border-bottom: 1px solid #ccc;
}

.publish-text-input {
    padding: 20rpx;
    font-size: 28rpx;
    width:auto;
}

.upload-images {
    width: 128rpx;
    height: 128rpx;
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 8rpx;
    margin: 10rpx;
    overflow: hidden;
}

/* 删除上传图片 */
.delete-upload-box {
    width: 0;
    display: inline-block;
    top:-130rpx;
    left:-20rpx;
    position: relative;
}

/* 删除上传图片按钮 */
.delete-upload-btn {
    width: 30rpx;
    height: 30rpx;
    overflow:hidden;
    border-radius: 50%;
    background: rgba(255,0,0,.6);
    line-height: 30rpx;
    position: absolute;
    text-align: center;
    font-size: 26rpx;
    color:#fff;
    top: -15rpx;
    left: -15rpx;
}

.image-upload-btn {
    width: 128rpx;
    height: 128rpx;
    background-size: 70%;
    background-position: 50%;
    background-repeat: no-repeat;
    border: 1px dashed #666;
    margin: 20rpx;
    border-radius: 8rpx;
}

.publish-submit-btn {
    height: 74rpx;
    line-height: 74rpx;
    width: 90%;
    background-color: #fa460a;
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
    border: none;
}