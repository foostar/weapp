page {
    background-color: #efefef;
    overflow: hidden;
}
.publish-select-warp {
    margin: 20rpx 0;
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
    padding: 0 20rpx;
}
.publish-select-label {
    font-size: 28rpx;
    color: #fa460a;
    font-weight: 900;
}
.publish-select {
    flex: 1;
    text-align: right;
    padding-right: 50rpx;
    background-image: url(data:image/png;base64,);
    background-size: 24rpx 24rpx;
    background-repeat: no-repeat;
    background-position: 98% 50%;
    font-size: 28rpx;
    color: #888;
}

.publish-content {
    background-color: #fff;
    padding-bottom: 20rpx;
    margin-bottom: 60rpx;
}
.publish-title {
    height: 90rpx;
    line-height: 90rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
    border-bottom: 1rpx solid #ccc;
}

.publish-text-input {
    padding: 20rpx;
    font-size: 28rpx;
}

.image-upload-btn {
    background-image: url(data:image/png;base64,);
    width: 128rpx;
    height: 128rpx;
    background-size: 70%;
    background-position: 50%;
    background-repeat: no-repeat;
    border: 1px dashed #666;
    margin: 20rpx;
    border-radius: 8rpx;
}

.publish-submit-btn {
    height: 74rpx;
    line-height: 74rpx;
    width: 90%;
    background-color: #fa460a;
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
    border: none;
}