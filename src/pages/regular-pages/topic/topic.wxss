/*
    引入 tabs 的css样式  
*/
@import "/components/buttons-tab/buttons-tab.wxss";
@import "/components/layout/layout.wxss";

page {
  background: #efeff4;
}
.tpcinfo-header {
  width: 100%;
  height: 400rpx;
  background-size: cover;
  background-position: 50%;
  color: #fff;
  font-size: 28rpx;
}
.tpcinfo-header-cover {
  height: 100%;
  background: rgba(0,0,0,.2);
  text-align: center;
  position: relative;
}
.tpcinfo-header-title {
  padding: 140rpx 50rpx 14rpx 40rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-wrap: break-word;
  font-size: 36rpx;
}
.tpcinfo-header-content {
  padding: 20rpx 60rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  word-wrap: break-word;
  font-size: 28rpx;
}
.tpcinfo-users {
  margin-bottom: 20rpx;
  padding: 20rpx;
  height: 72rpx;
  background-color: #fff;
  position: relative;
}
.tpcinfo-users-list {
  overflow: hidden;
  height: 72rpx;
  margin-right: 80rpx;
}
.tpcinfo-users-item {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  border-radius: 72rpx;
  background-size: cover;
  background-position: 50%;
  display: inline-block;
  margin-right: 14rpx;
}
.tpcinfo-users-author {
  font-size: 24rpx;
  color: #fff;
  background-color: #ef2020;
  padding: 6rpx 0;
  text-align: center;
  transform: scale(.8);
  position: absolute;
  bottom: -9%;
  width: 125%;
  left: -12.5%;
}
.tpcinfo-users-count {
  position: absolute;
  top: 0;
  padding: 20rpx 20rpx 20rpx 0;
  right: 0;
  bottom: 0;
  line-height: 72rpx;
  font-size: 24rpx;
}
