/* layout: className is from layout */
/* 单张图片 */
.image {}
.image text {
    display: none;
}
/* 上图下文 */
.textImage {
    background-color: #fff;
}
.textImage text {
    display: block;
    font-size: 26rpx;
    text-align: center;
    width: 100%;
    height: 44rpx;
    line-height: 44rpx;
}
/* 文字覆盖在下 */
.textOverlapDown {
    position: relative;
}
/* 视频_文字覆盖在上 */
.textOverlapUp_Video {
    position: relative;
}
/* 视频_文字覆盖在下 */
.textOverlapDown_Video {
    position: relative;
}
.textOverlapDown text, .textOverlapUp_Video text, .textOverlapDown_Video text, .circle text {
    position: absolute;
    width: 100%;
    font-size: 26rpx;
    text-align: center;
    left: 0;
    right: 0;
    height: 44rpx;
    line-height: 44rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.textOverlapDown text, .textOverlapUp_Video text, .textOverlapDown_Video text {
    background-color: rgba(0,0,0,0.2);
    color: #fff;
    bottom: 0;
}
.circle text {
    bottom: 0;
}
.textOverlapUp_Video text {
    top: 0;
}
.textOverlapUp_Video:after, .textOverlapDown_Video:after {
    content: '';
    display: block;
    position: absolute;
    color: #000;
    width: 90rpx;
    height: 90rpx;
    top: 50%;
    left: 50%;
    margin-left: -45rpx;
    margin-top: -45rpx;
    background-size: cover;
}
/* 圆形 */
.circle {
    position: relative;
    display: block;
}
.circle image {
    border-radius: 3000rpx;
}