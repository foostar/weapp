.layout-four-col {
    width: 100%;
    height: 160rpx;
    flex-direction: row;
    display: flex;
    background: #fff;
}

.layout-four-col-item {
    flex: 1;
    display: flex;
    position: relative;
}

.layout-four-col-item image {
    width: 100%;
    height: 90rpx;
    margin: 15rpx 0;
}
.layout-four-col-item text {
    height: 40rpx;
    position: absolute;
    bottom: 0;
    width: 100%;
    text-align: center;
    font-size: 12rpx;
}