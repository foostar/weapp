<view class="layout1col3row">
    <view class="layout-flex-column">
        <view class="layout-1-col-3-row-item {{style}} {{componentList[0].iconStyle}}" bindtap="layout1col3row_touch" data-index="0" data-event-key="{{key}}">
            <!-- <image mode="{{componentList[3].iconStyle == 'circle' ? 'aspectFill' : 'aspectFit' }}" src="{{componentList[0].icon}}"></image> -->
            <image mode="aspectFill" src="{{componentList[0].icon}}"></image>
            <text>{{ componentList[0].desc }}</text>
        </view>
    </view>
    <view class="layout-flex-column">
        <view class="layout-flex-row">
            <view class="layout-1-col-3-row-item {{style}} {{componentList[1].iconStyle}}" bindtap="layout1col3row_touch" data-index="1" data-event-key="{{key}}">
                <image mode="aspectFill" src="{{componentList[1].icon}}"></image>
                <text>{{ componentList[1].desc }}</text>
            </view>
        </view>
        <view class="layout-flex-row">
            <view class="layout-1-col-3-row-item {{style}} {{componentList[2].iconStyle}}" bindtap="layout1col3row_touch" data-index="2" data-event-key="{{key}}">
                <image mode="aspectFill" src="{{componentList[2].icon}}"></image>
                <text>{{ componentList[2].desc }}</text>
            </view>
        </view>
        <view class="layout-flex-row">
            <view class="layout-1-col-3-row-item {{style}} {{componentList[3].iconStyle}}" bindtap="layout1col3row_touch" data-index="3" data-event-key="{{key}}">
                <image mode="aspectFill" src="{{componentList[3].icon}}"></image>
                <text>{{ componentList[3].desc }}</text>
            </view>
        </view>
    </view>
</view>