.layout3row1col {
    width: 100%;
    flex-direction: row;
    display: flex;
    background: #fff;
}
.layout-3-row-1-col-item {
    flex: 1;
    display: flex;
}
.layout-3-row-1-col-item image {
    width: 100%;
    height: 100%;
    display: block;
}

.layout3row1col .layout-flex-row {
    flex-direction: row;
    display: flex;
}
.layout3row1col .layout-flex-column {
    flex: 144;
    display: flex;
    flex-direction: column;
}
.layout3row1col .layout-flex-column:last-child {
    flex: 430;
}

.layout-1-col-3-row-item.circle {
    display: block;
}
.layout-1-col-3-row-item.circle image {
    height: 61.5%;
    margin: 0 auto;
}

