.login-view {
    height: 100%;

}
.from-view {
    height: 236rpx;
    padding-top: 100rpx;
    padding-bottom: 20rpx;
    margin-bottom: 50px;
}

.app-icon {
    width: 200rpx;
    height: 200rpx;
    margin: auto;
    display: block;
    border-radius: 10rpx;
}

.login-input input {
    background: rgba(0,0,0,0);
    padding-top: 20rpx;
    padding-left: 40rpx;
    font-size: 32rpx;
}
.login-input {
    display: block;
    background: rgba(0,0,0,.3);
    border-radius: 46rpx;
    margin: 0 40rpx;
    height: 90rpx;
    color: rgba(255,255,255,.5);
    margin-bottom: 30rpx;
}
.input-shadow {
    color: rgba(255,255,255,.5);
}

.register-text{
    display: block;
    text-align: right;
    margin: 10rpx 40rpx;
    font-size: 32rpx;
    padding: 40rpx 0;
}

.login-form-btn {
    background: rgba(0,0,0,0);
    border: 0;
    color: #fff;
    font-size: 16px;
    font-weight: 100;
    text-align: center;
    margin-top: 100rpx;
}
.login-box button::after {
    border: 0;
}

.login-register-btn {
    font-weight: 100;
    position: absolute;
    bottom: 30rpx;
    right: 10rpx;
}