.layout1col2row {
    width: 100%;
    flex-direction: row;
    display: flex;
    background: #fff;
}
.layout-1-col-2-row-item {
    flex: 1;
    display: flex;
}
.layout-1-col-2-row-item image {
    width: 100%;
    height: 100%;
    display: block;
}

.layout1col2row .layout-flex-row {
    flex-direction: row;
    display: flex;
}
.layout1col2row .layout-flex-column {
    flex: 1;
    display: flex;
    flex-direction: column;
}
.layout-1-col-2-row-item.circle {
    display: block;
}
.layout-1-col-2-row-item.circle image {
    height: 61.5%;
    margin: 0 auto;
}

/* 默认 */
.layoutdefault .layout1col2row .layout-1-col-2-row-item {
    margin: 10rpx;
}
/* 图片 */
.layoutimage .layout1col2row .layout-1-col-2-row-item {
    margin: 5rpx;
}
/* 线性 */
.layoutline .layout1col2row .layout-flex-column:first-child .layout-1-col-2-row-item {
    border-bottom: 1px #ccc solid;
    border-right: 1px #ccc solid;
}
.layoutline .layout1col2row .layout-flex-row .layout-1-col-2-row-item {
    border-bottom: 1px #ccc solid;
}

.layoutline .layout1col2row .layout-flex-row .layout-1-col-2-row-item.circle image {
    width: 129.84249rpx;
}
.layoutline .layout1col2row .layout-flex-column:last-child .layout-1-col-2-row-item.circle image {
    width: 259.859155rpx;
}

.layout1col2row .layout-flex-row .layout-1-col-2-row-item {
    height: 211.267606rpx;
}
.layout1col2row .layout-flex-column:first-child .layout-1-col-2-row-item {
    height: 422.535212rpx;
}