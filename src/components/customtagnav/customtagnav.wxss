.customtag-wapper{
    display:flex;
    overflow:hidden;
    height:100%;
    flex-direction: column;
}
.customtag-box{
    width:100%;
    height:90rpx;
    white-space:nowrap;
    background:#fff;
    line-height:90rpx;
    box-sizing: border-box;
    border-bottom: 1px solid #ddd;
}
.customtag-item{
    /*display:inline-block;*/
    width:25%;
    height:90rpx;
    text-align: center;
    overflow:hidden;
    word-break:break-all;  
    white-space:nowrap;
    text-overflow:ellipsis; 
    line-height:90rpx;
    box-sizing:border-box;
    float:left;
    /*left:0;
    top:0;
    position: relative;*/
}
.customtag-content{
    position: absolute;
    top:90rpx;
    bottom:0;
}
.customtag-box .active{
    border-bottom:3px solid currentColor;
}