.customtag-wapper{
    display:flex;
    overflow:hidden;
    height:100%;
    flex-direction: column;
}
.customtag-box{
    width:100%;
    height:90rpx;
    white-space:nowrap;
    background:#fff;
    flex:0;
    border-bottom: 1px solid #ddd;
}
.customtag-item{
    display:inline-block;
    width:25%;
    height:90rpx;
    text-align: center;
    overflow:hidden;
    word-break:break-all;  
    white-space:nowrap;
    text-overflow:ellipsis; 
    line-height:90rpx;
    box-sizing:border-box;
}
.customtag-content{
    flex:1;
    height:100%;
    overflow:auto;
}
.customtag-box .active{
    border-bottom:3px solid currentColor;
}