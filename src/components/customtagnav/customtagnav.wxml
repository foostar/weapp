<import src="../module/module.wxml" />
<view class="customtag-wapper">
    <scroll-view scroll-x="true" class="customtag-box">
        <block wx:for="{{tabs}}" wx:key="{{index}}">
            <view class="customtag-item font-wide text-color {{ item.id == selected ? 'active' : ''}}" data-role="tag" bindtap="customtagnav_changeTap" data-event-key="{{key}}" data-index="{{index}}" data-id="{{item.id}}">{{item.title}}</view>
        </block>
    </scroll-view>
    <view class="customtag-content">
        <template is="{{children[selected].template}}" data="{{...children[selected]}}" />
    </view>
</view>