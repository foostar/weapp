.prelogin {
    height: 100%;
    position: relative;
}
.prelogin-view {
    position: absolute;
    top: 150rpx;
    left: calc(50% - 100rpx);
}
.prelogin-view image {
    width:200rpx;
    height:200rpx;
    margin:auto;
    display:block;
    border-radius:50%;
    box-shadow: 0 0 0 5rpx rgba(255,255,255,.5)
}
.prelogin-view view {
    color: rgba(255,255,255,.5);
    font-weight: 100;
    font-size: 16px;
    padding: 20rpx;
    text-align: center;
}

.prelogin-container {
    height: auto;
    position: absolute;
    bottom: 100rpx;
    right: 0;
    left: 0;
}
.prelogin-btn {
    background: rgba(255,255,255,.2);
    color: #fff;
    font-weight: 100;
    border-radius: 60rpx;
    margin: 0 100rpx;
    margin-bottom: 30rpx;
    border: 0;
    font-size: 16px;
    box-shadow: 0 0 0 1px rgba(255,255,255,.4);
    text-align: center;
    padding: 14rpx 20rpx;
    line-height: 1.5;
}
.no-bg {
    background: rgba(0,0,0,.0);
    margin-top: 30px;
}