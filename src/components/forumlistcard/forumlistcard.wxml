<import src="/pages/module/module.wxml"/>

<view wx:for="{{list}}" class="community-section">
    <view class="forum-list-flat-panel">
        <view class="forum-list-flat-title">{{item.board_category_name}}</view>
        <view class="forum-list-flat-items"  >
            <view class="forum-list-flat-item {{index % 2  ? '' : 'border-right'}}" wx:for="{{item.board_list}}" wx:key="{{index}}" bindtap="forumlistcard_navigator" data-event-key="{{key}}" data-url="{{item.url}}">
                <view class="forum-list-flat-item-panel">
                    <image wx:if="{{item.board_img}}" class="forum-list-flat-item-icon" src="{{item.board_img}}" />
                    <view class="forum-list-flat-item-info">
                        <view class="forum-list-flat-item-info-title">{{item.board_name}}</view>
                        <view class="forum-list-flat-item-info-time">
                            {{item.last_posts_date}}
                        </view>
                    </view>
                    <view wx:if="{{item.td_posts_num != 0}}" class="forum-list-flat-item-num">
                        ï¼ˆ{{item.td_posts_num}})
                    </view>
                </view>
            </view>
        </view>
    </view>
