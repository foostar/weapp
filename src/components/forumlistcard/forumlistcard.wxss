.forum-list-flat-panel {    
    margin: 10px;
    border-radius: 5px;
    border: 1px solid #d9d9d9;
    overflow: hidden;
}
.forum-list-flat-title {
    text-align: center;
    background-color: #ededed;
    color: #2e2e2e;
    font-size: 15px;
    padding-top: 7px;
    padding-bottom: 7px;
    border-bottom: 1px solid #d9d9d9;

}
.forum-list-flat-items {
    overflow: hidden;
    background-color: #fff;
}
.forum-list-flat-item-panel {
    height: 60px;
    overflow: hidden;
    position: relative;
}

.forum-list-flat-item {
    width: 50%;
    border-bottom: 1px solid #d9d9d9;
    float: left;
    height: 60px;
    position: relative;
    overflow: hidden;
    background-color: #fff;
}
.border-right {
    width: 49.5%;
    border-right: 1px solid #d9d9d9;

}
.border-bottom {
    border-bottom: 0px solid #d9d9d9;
}
.forum-list-flat-item-icon {
    background-size: cover;
    background-position: 50%;
    border-radius: 5px;
    width: 36px;
    height: 36px;
    display: inline-block;
    vertical-align: middle;
    margin: 12px 8px;
    float: left;
}
.forum-list-flat-item-info {
    vertical-align: middle;
    width: 100%;
    padding-right: 36px;
    padding: 12px 36px 12px 8px;
}
.forum-list-flat-item-info-title {
    font-size: 13px;
    color: #4d4d4d;
    word-wrap: break-word;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}
.forum-list-flat-item-info-time {
    color: #d4d4d4;
    margin-right: -36px;
    font-size: 12px;
}
.forum-list-flat-item-num {
    position: absolute;
    color: #0091fd;
    top: 5px;
    right: 10px;
    font-size: 12px;
}