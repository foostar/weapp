.layout-slider {
    width: 100%;
    height: 396rpx;
}
.layout-slider.layoutSlider_Mid {
    height: 281.25rpx;
}
.layout-slider.layoutSlider_Low {
    height: 210rpx;
}
.layout-slider image {
    width: 100%;
    height: 100%;
}
.slider-image-container {
    position: relative;
    height: 100%;
    width: 100%;
}
.slider-desc {
    height: 44rpx;
    line-height: 44rpx;
    position: absolute;
    bottom: 0;
    width: 100%;
    background-color: rgba(0,0,0,.5);
    color: #fff;
    padding: 0 100rpx 0 20rpx;
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
    font-size: 26rpx;
}