.forumlistsplit {
    display: flex;
    height: 100%;
}
.boardSplit-title{
    width:200rpx;
    box-shadow:3rpx 3rpx 5rpx #ccc;
    box-sizing:border-box;
}
.boardSplit-title{
    height:100%;
    overflow:auto;
}
.boardSplit-content{
    height:100%;
    overflow:auto;
}
.boardSplit-title view{
    width:100%;
    height:110rpx;
    border-bottom:1px solid #ccc;
    border-right:1px solid #ccc;
    text-align:center;
    line-height:110rpx;
    background:#f1f1f1;
    box-sizing:border-box;
}
.boardSplit-title .active{
    color:#2db7f5;
    background:#fff;
    border-right:none;
}
.boardSplit-content{
    flex:1;
    padding:0 16rpx 20rpx;
    box-sizing:border-box;
}
.boardContent-box{
    width:100%;
    box-sizing:border-box;
    margin-top:20rpx;
    height:96rpx;
    clear:both;
}
.boardContent-image,.boardFocus_btn,.boardContent-info{
    float:left;
}
.boardContent-icon{
    width:32rpx;
    height:32rpx;
}
.boardFocus_btn{
    line-height:60rpx;
    position:relative;
    top:20rpx;
    text-align:center;
    width:104rpx;
    height:56rpx;
    border-radius:10rpx;
    color:#fff;
}
.boardSplit-content image{
    width:96rpx;
    height:96rpx;
}
.boardContent-info{
    width:300rpx;
    flex:1;
    box-sizing:border-box;
    padding:0 20rpx;
}
.boardContent-info .info-title{
    font-weight:400;
    line-height:60rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    width:100%;
}
.boardContent-info .info-meta{
    color:#a4a4a4;
}
.boardFocused_btn{
    background:#a4a4a4
}
.currentBoard_title{
    width:100%;
    height:60rpx;
    line-height:60rpx;
    border-bottom:1px solid #a4a4a4;
    color:#a4a4a4;
    box-sizing:border-box;
    font-weight:400;
}
.focusBoardList{
    margin-bottom:20rpx;
}
.focusBoardList .boardFocus_btn{
    background:#a4a4a4
}
.info-meta image{
    width:24rpx;
    height:24rpx;
}
.flex-container{
    display:flex;
    flex-direction:column
}