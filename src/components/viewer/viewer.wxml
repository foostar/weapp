<import src="../module/module.wxml" />

<template name="viewer">
    <view wx:if="{{hasScroll}}" class="viewer">
        <template is="{{components[module.type + '-' + module.style]}}" wx:if="{{!!module}}" data="{{...children['m_' + module.id], key: 'm_' + module.id}}" />
    </view>
    <scroll-view wx:else class="viewer" scroll-y>
        <template is="{{components[module.type + '-' + module.style]}}" wx:if="{{!!module}}" data="{{...children['m_' + module.id], key: 'm_' + module.id}}" />
    </scroll-view>
</template>
