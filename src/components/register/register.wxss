.register-thema-register-header {
    height: 100%;
}
.register-app-icon {
    border-radius: 200rpx;
    border: 4px solid #fff;
    box-shadow: 0px 0px 50px rgba(255, 255, 255, 0.8);
    width: 200rpx;
    height: 200rpx;
    margin: 0px auto 7px auto;
    display: block;
}
.register-box {
    margin-top: 150rpx;
    display: block;

}

.register-input {
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    align-content: center;
    background:rgba(0,0,0,.3);
    border-radius:46rpx;
    margin:0 40rpx;
    height:90rpx;
    padding-left: 20rpx;
    color:rgba(255,255,255,.5);
    margin-bottom:30rpx;
    overflow: hidden;

}

.register-input input{
    background:rgba(0,0,0,0);
    margin:auto 0px auto 5rpx;
}
.register-input .register-pic {
    flex:1;
    overflow: hidden;
    width: 150rpx;
    height: 90rpx;
    background: #fff;
}

.register-input .register-btn {
    flex:1;
    overflow: hidden;
    width: 150rpx;
    height: 90rpx;
    line-height: 90rpx;
    font-size: 34rpx;
    text-align: center;
    font-weight: 100;
    background: rgba(255,255,255,.4);
}

.register-mobile-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 40rpx;
}
.register-mobile-btn {
    display: block;
    text-align: right;
    height: 80rpx;
    padding-right: 50rpx;
    font-size: 24rpx;
    line-height: 56rpx;
}

.register-box button::after {
    border: 0;
}

