.register-thema-register-header {
    height: 100%;
}
.register-app-icon {
    border-radius: 200rpx;
    border: 4px solid #fff;
    box-shadow: 0px 0px 50px rgba(255, 255, 255, 0.8);
    width: 200rpx;
    height: 200rpx;
    margin: 0px auto 7px auto;
    display: block;
}
.register-box {
    margin-top: 80rpx;
    display: block;

}
.register-box input {
    background: rgba(0,0,0,0);
    padding-top: 10px;
}


