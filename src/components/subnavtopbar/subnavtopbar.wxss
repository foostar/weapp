.subnavtopbar {
    height: 100%;
    width: 100%;
    display: flex;
    overflow: hidden;
    flex-direction: column;
}
.topbar-bar{
    width:100%;
    height: 75rpx;
    background:#fff;
    justify-content:space-between;
    line-height:75rpx;
    box-sizing:border-box;
}
.subnav-topbar-content-container {
    flex: 1;
    transition: .3s;
    overflow:auto;
}
.topbar-icon, .topbar-icon image{
    width:75rpx;
    height:75rpx;
}
.topbar-icon{
    margin:0 15rpx;
}
.top-bar{
    width:55%;
    margin:0 auto;
    display:flex;
    position: relative;
}
.top-bar view{
    flex:1;
    text-align:center;
}
.subnavtopbar-content-container {
    flex: 1;
    width:100%;
}
.topbar-content{
    width:100%;background-color:#fff;overflow:auto;height:100%;
}
.top-bar-indicator {
    position: absolute;
    height: 4rpx;
    bottom: 8rpx;
    left: 0;
    z-index: 999;
    transition: .3s;
}
.top-bar-indicator-inner {
    height: 100%;
    margin: 0 5%;
}