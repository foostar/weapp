.createforum-forumlist-card {
    margin: 30rpx 20rpx;
}
.createforum-forumlist-card-title {
    clear:both;
    color: #999;
    font-size: 16px;
    line-height: 72rpx;
    display: block;
    position: relative;
    padding-left: 40rpx;
}
.createforum-forumlist-card-title::after {
    content: '';
    position: absolute;
    display: block;
    width: 16rpx;
    height: 16rpx;
    border-radius: 50%;
    background-color: #ff004e;
    top: 50%;
    left: 15rpx;
    margin-top: -0.25rem;
}
.createforum-forumlist-card-container {
    display: block;
}
.createforum-forum-item {
    float: left;
    width: calc(50% - 20rpx);
    height: 108rpx;
    box-shadow: 0px 0px 1px #999 inset;
    border-radius: 10rpx;
    margin: 10rpx;
    background: #fff;
    position: relative;
    display: flex;
    flex-direction: row;
    justify-content: center;

}
.createforum-forum-item-image {
    width: 108rpx;
    height: 108rpx;
}

.createforum-forum-item-image image, .createforum-topic-icon image  {
    width: 74rpx;
    height: 74rpx;
    border-radius: 50%;
    display: block;
    margin: auto;
    margin-top: calc(50% - 37rpx);
}

.createforum-forum-item-text, .createforum-topic-text {
    flex:1;
    color: #4d4d4d;
    word-wrap: break-word;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
    line-height: 108rpx;
    padding-right: 20rpx;
}

.createforum-topic-panel {
    height: 108rpx;
    display: flex;
    flex-direction: row;
    justify-content: center;
    box-shadow: 0px 0px 1px #999 inset;
    border-radius: 10rpx;
    margin: 20rpx 50rpx;
    background: #fff;

}
.createforum-topic-icon {
    width: 108rpx;
    height: 108rpx;
}
