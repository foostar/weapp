.publish-select-warp {
    margin: 20rpx 0;
    display: flex;
    height: 90rpx;
    line-height: 90rpx;
    background-color: #fff;
    padding: 0 20rpx;
}
.publish-select-label {
    font-size: 28rpx;
    font-weight: 900;
}
.publish-select {
    flex: 1;
    text-align: right;
    padding-right: 50rpx;
    background-size: 24rpx 24rpx;
    background-repeat: no-repeat;
    background-position: 98% 50%;
    font-size: 28rpx;
    color: #888;
}

.createforum-publish-content {
    background-color: #fff;
    padding-bottom: 20rpx;
    margin-bottom: 20rpx;
}
.createforum-publish-images {
    background-color: #fff;
    padding: 20rpx;
}
.createforum-publish-title {
    height: 104rpx;
    line-height: 104rpx;
    font-size: 32rpx;
    padding: 0 20rpx;
    position: relative;
    -webkit-background-size: 100% 1px;
}
.createforum-publish-title-placeholder {
    line-height: 104rpx;
    font-size: 32rpx;
    color: #999;
}

.createforum-publish-textarea {
    padding: 20rpx;
    font-size: 28rpx;
    width:auto;
}

.createforum-upload-images {
    width: 128rpx;
    height: 128rpx;
    background-size: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-color: #e9e9e9;
    margin-bottom: 10rpx;
    margin-right:16rpx;
    overflow: hidden;
}


/* 删除上传图片 */
.delete-upload-box {
    width: 0;
    display: inline-block;
    top:-130rpx;
    left:-20rpx;
    position: relative;
}

/* 删除上传图片按钮 */
.delete-upload-btn {
    width: 50rpx;
    height: 50rpx;
    overflow:hidden;
    border-radius: 50%;
    background: rgba(255,0,0,.6);
    line-height: 50rpx;
    position: absolute;
    text-align: center;
    font-size: 26rpx;
    color:#fff;
    top: -25rpx;
    left: -25rpx;
}

.image-upload-btn {
    width: 128rpx;
    height: 128rpx;
    background-size: 70%;
    background-position: 50%;
    background-repeat: no-repeat;
    border: 1px dashed #666;
    border-radius: 8rpx;
}

.publish-submit-btn {
    margin-top: 50rpx;
    height: 74rpx;
    line-height: 74rpx;
    width: 90%;
    background-color: #fa460a;
    color: #fff;
    font-size: 28rpx;
    border-radius: 6rpx;
    border: none;
}
.createforum-publish-topicList {
    margin-top:-20rpx;
    display: flex;
    background:#f9f9f9;
    padding: 10rpx;
    margin-bottom: 20rpx;
    flex-direction: row;
}
.createforum-topic-label {
    font-size: 28rpx;
    width: 100rpx;
    padding-left: 10rpx;

}
.createforum-topic-list {
    flex:1;
}
.createforum-topic-item {
    display: inline-block;
    background-color: #f2f2f2;
    height: 40rpx;
    line-height: 40rpx;
    padding: 6rpx 16rpx;
    font-size: 24rpx;
    margin: 0 8rpx 16rpx;
    border-radius: 8rpx;
}
.createforum-action {
    color: #fff;
    background: #ff004e;
}