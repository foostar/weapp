.layout2row1col {
    width: 100%;
    flex-direction: row;
    display: flex;
    background: #fff;
}
.layout-2-row-1-col-item {
    flex: 1;
    display: flex;
}
.layout-2-row-1-col-item image {
    width: 100%;
    height: 100%;
    display: block;
}

.layout2row1col .layout-flex-row {
    flex-direction: row;
    display: flex;
}
.layout2row1col .layout-flex-column {
    flex: 1;
    display: flex;
    flex-direction: column;
}

/* 默认 */
.layoutdefault .layout2row1col .layout-2-row-1-col-item {
    margin: 10rpx;
}
/* 图片 */
.layoutimage .layout2row1col .layout-2-row-1-col-item {
    margin: 5rpx;
}
/* 线性 */
.layoutline .layout2row1col .layout-flex-column:last-child .layout-2-row-1-col-item {
    border-bottom: 1px #ccc solid;
    border-left: 1px #ccc solid;
}
.layoutline .layout2row1col .layout-flex-row .layout-2-row-1-col-item {
    border-bottom: 1px #ccc solid;
}

.layout-2-row-1-col-item.circle {
    display: block;
}
.layout-2-row-1-col-item.circle image {
    height: 61.5%;
    margin: 0 auto;
}

.layout2row1col .layout-flex-row .layout-2-row-1-col-item.circle image {
    width: 129.84249rpx;
}
.layout2row1col .layout-flex-column:last-child .layout-2-row-1-col-item.circle image {
    width: 259.859155rpx;
}

.layout2row1col .layout-flex-row .layout-2-row-1-col-item {
    height: 211.267606rpx;
}
.layout2row1col .layout-flex-column:last-child .layout-2-row-1-col-item {
    height: 422.535212rpx;
}