{
  "parser": "babel-eslint",
  "extends": ["eslint-config-airbnb-base"],
  "env": {
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "babel"
  ],
  "globals": {
    "App": true,
    "Page": true,
    "wx": true,
    "getApp": true
  },
  "rules": {
    "comma-dangle": 0,
    "func-names": 0,
    "prefer-const": 0,
    "no-underscore-dangle":0,
    "no-var":0,
    "one-var":0,
    "arrow-parens":0,
    "eqeqeq":0,
    "vars-on-top":0,
    "arrow-body-style": 0,
    "no-param-reassign": 0,
    "no-return-assign": 0,
    "max-len": 0,
    "consistent-return": 0,
    "indent": [2, 4, {
      "VariableDeclarator": 2,
      "SwitchCase": 1
    }],
    "no-underscore-dangle": [2, { "allowAfterThis": true }],
    "array-bracket-spacing": [2, "always"],
    "semi": [2, "never"],
    "no-unused-expressions": [2, {
      "allowShortCircuit": true,
      "allowTernary": true
    }],
    "new-cap": 0,
    "no-confusing-arrow": [2, {"allowParens": true}]
  }
}
