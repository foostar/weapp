/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

/* common */
.line-bottom {
    position: relative;
}
.line-bottom:after {
    content: '';
    display: block;
    height: 1rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
    background-color: #ddd;
}

.clearfix:after, .clearfix:before {
  content: '';
  display: table;
}
.clearfix:after {
  clear: both;
  visibility: hidden;
  font-size: 0;
  height: 0;
}
