.thema-register-header {
    height: 434rpx;
}
.app-icon {
    border-radius: 200rpx;
    border: 8rpx solid #fff;
    box-shadow: 0px 0px 50px rgba(255, 255, 255, 0.8);
    width: 200rpx;
    height: 200rpx;
    margin: 0px auto 7px auto;
    display: block;
}

.login-btn {
    border: 0;
    margin: 10rpx 40rpx;
    color: #fff;
    text-align: center;
}

.from-view {
    height: 236rpx;
    padding-top: 100rpx;
    padding-bottom: 20rpx;
}

.form-box {
    background-repeat: no-repeat;
    background-position: left;
    margin: 10rpx 40rpx;
    border-bottom: 1rpx solid #ccc;
}
.form-box-mobile {
    background-repeat: no-repeat;
    background-position: left;
    border-bottom: 1rpx solid #ccc;
    margin-right: 20rpx;
}
.input {
    padding-left: 40rpx;
    height: 100rpx;
    font-size: 26rpx;
}
.mobile-box {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 10rpx 40rpx;
}
.mobile-btn {
    flex:1;
    justify-content: center;
    align-items: center;
    width: 164rpx;
    height: 80rpx;
    font-size: 24rpx;
    align-items: right;
    display: block;
    line-height: 56rpx;
    background-color: #fff;
    text-align: center;
    border-radius: 10rpx;
    line-height: 80rpx;
}

.icon-phone {
    background-image:url(data:image/png;base64,)
}

.icon-verify {
    background-image:url(data:image/png;base64,)
}