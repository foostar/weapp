.community-container {
  background-color: #eee;
  height: 100%;
}
.community-section-title {
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  line-height: 2;
}

.community-block {
  width: 50%;
  display: inline-flex;
  box-sizing: border-box;
  padding: 20rpx 10rpx;
  background-color: #fff;
  font-size: 26rpx;
}
.border-right {
  border-right: 1px solid #eee;
}
.border-bottom {
  border-bottom: 1px solid #eee;
}

.community-icon {
  margin-left: 40rpx;
  margin-right: 20rpx
}
.community-content {
  flex: 1;
}
.community-block-title {
  margin-bottom: 20rpx;
}
.community-block-small {
  color: #ccc;
  font-size: 24rpx;
  transform: scale(.8);
  transform-origin: 0 50%;
}

.community-count {
  float: right;
  font-size: 12rpx;
  color: #4aa3df;
  transform: scale(.8);
}